<nav class="navbar navbar-light bg-light border-bottom">
  <div class="container-fluid justify-content-between">
    <a href=<%= articles_path %> class="text-secondary text-decoration-none fs-5">Wikinimous</a>
    <a href=<%= new_article_path %> class="text-black text-decoration-none">New article</a>
  </div>
</nav>
<div class="container">
  <h1>Edit Article</h1>
  <%= form_with model: @article do |f| %>
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control mb-2"%>
    <%= f.label :content, class: "form-label" %>
    <%= f.text_field :content, class: "form-control ace_editor ace_hidpi ace-solarized-light mb-2"%>
    <%= f.submit class: "btn btn-primary"%>
  <% end %>
  <p><%= link_to 'Show', article_path(@article)%> | <%= link_to 'Back', articles_path%></p>
</div>
